{
  "exclude": ["node_modules", "../types"],
  "compilerOptions": {
    "baseUrl": ".",
    // The Remix compiler takes care of compiling everything in the `app`
    // directory, so we don't need to emit anything with `tsc`.
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es2019",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["../types", "../node_modules/@types"]
  }
}
