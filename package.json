{
  "name": "kentcdodds.com",
  "version": "1.0.0",
  "engines": {
    "node": "14"
  },
  "description": "A remix version of kentcdodds.com",
  "main": "remix.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kentcdodds/remix-kentcdodds.com.git"
  },
  "keywords": [],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/kentcdodds/remix-kentcdodds.com/issues"
  },
  "homepage": "https://github.com/kentcdodds/remix-kentcdodds.com#readme",
  "scripts": {
    "build": "concurrently --names \"css,server\" --prefix-colors \"cyan,green\" \"npm run css:build\" \"npm run server:build\" && cross-env NODE_ENV=production remix build",
    "dev": "concurrently --names \"remix-run,css,server\" --prefix-colors \"magenta,cyan,green\" \"remix run > /dev/null\" \"npm run css:watch\" \"npm run server:watch\"",
    "server:watch": "cross-env NODE_ENV=development nodemon -w app -w server -e js,jsx,ts,tsx,md,mdx start.js",
    "server:build": "tsc --project server",
    "start": "cross-env NODE_ENV=production node start.js",
    "css:build": "postcss styles --base styles --dir app/ --env production",
    "css:watch": "postcss styles --base styles --dir app/ -w",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cy:open",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start http://localhost:8811 cy:run",
    "test": "kcd-scripts test",
    "lint": "kcd-scripts lint",
    "format": "kcd-scripts format",
    "typecheck": "concurrently --names \"server,app,cypress\" --prefix-colors \"red,green,blue\" \"tsc --project server --noEmit\" \"tsc --project app --noEmit\" \"tsc --project cypress --noEmit\"",
    "validate": "kcd-scripts validate",
    "setup": "npm install && npm run validate"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.22",
    "@remix-run/cli": "^0.8.0",
    "@remix-run/data": "^0.8.0",
    "@remix-run/express": "^0.8.0",
    "@remix-run/react": "^0.8.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@sindresorhus/slugify": "^1.1.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "prismjs": "^1.22.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "rehype-stringify": "^8.0.0",
    "remark-embedder": "0.0.1",
    "remark-prism": "^1.3.3",
    "rollup": "^2.34.2",
    "rollup-plugin-terser": "^7.0.2",
    "sort-by": "^1.2.0",
    "tailwindcss": "^2.0.1",
    "unified": "^9.2.0",
    "unist-util-visit": "^2.0.3",
    "wait-on": "^5.2.0"
  },
  "devDependencies": {
    "@mdx-js/react": "^1.6.22",
    "@tailwindcss/typography": "^0.3.1",
    "@testing-library/cypress": "^7.0.2",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "@types/estree": "0.0.45",
    "@types/express": "^4.17.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "autoprefixer": "^10.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "cypress": "^6.1.0",
    "eslint-import-resolver-jest": "^3.0.0",
    "gray-matter": "^4.0.2",
    "kcd-scripts": "^7.5.2",
    "kill-port": "^1.6.1",
    "nodemon": "^2.0.6",
    "postcss": "^8.2.0",
    "postcss-cli": "^8.3.0",
    "start-server-and-test": "^1.11.6",
    "ts-node": "^9.1.1",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "kcd-scripts pre-commit"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "server-build",
    "public/build",
    "*.d.ts",
    "storybook-static"
  ]
}
