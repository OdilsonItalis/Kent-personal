{
  "name": "kentcdodds.com",
  "version": "1.0.0",
  "engines": {
    "node": "14"
  },
  "description": "A remix version of kentcdodds.com",
  "main": "remix.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kentcdodds/remix-kentcdodds.com.git"
  },
  "keywords": [],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/kentcdodds/remix-kentcdodds.com/issues"
  },
  "homepage": "https://github.com/kentcdodds/remix-kentcdodds.com#readme",
  "scripts": {
    "css:watch": "postcss styles/**/*.css --base styles --dir app/styles --w",
    "css:build": "postcss styles/**/*.css --base styles --dir app/styles --env production",
    "prebuild": "npm run clean",
    "build": "npm run css:build && remix build",
    "clean": "rimraf ./node_modules/.cache ./build ./public/build \"./app/styles/**/*.css\"",
    "postinstall": "npm run build",
    "dev": "pm2-dev pm2.config.js",
    "start": "remix-serve build",
    "start:mocks": "node --require ./mocks ./node_modules/.bin/remix-serve build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e:dev": "start-server-and-test dev http-get://localhost:3000 cy:open",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http-get://localhost:8811 cy:run",
    "test": "kcd-scripts test",
    "lint": "kcd-scripts lint",
    "format": "kcd-scripts format",
    "typecheck": "tsc -b",
    "validate": "npm run typecheck"
  },
  "dependencies": {
    "@octokit/rest": "^18.5.3",
    "@prisma/client": "^2.23.0",
    "@remark-embedder/cache": "^1.0.0",
    "@remark-embedder/core": "^1.3.0",
    "@remark-embedder/transformer-oembed": "^1.0.1",
    "@remix-run/node": "^0.17.4",
    "@remix-run/react": "^0.17.4",
    "@remix-run/serve": "^0.17.4",
    "@tailwindcss/typography": "^0.4.1",
    "@xstate/inspect": "^0.4.1",
    "@xstate/react": "^1.3.3",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "gray-matter": "^4.0.3",
    "mdx-bundler": "^4.0.0",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.6.1",
    "nodemailer-mailgun-transport": "2.0.3",
    "pm2": "^4.5.6",
    "prismjs": "^1.23.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "rehype-document": "^5.1.0",
    "rehype-format": "^3.1.0",
    "rehype-stringify": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "remark-prism": "^1.3.6",
    "remark-rehype": "^8.1.0",
    "remix": "^0.17.4",
    "sort-by": "^1.2.0",
    "tailwindcss": "^2.1.2",
    "unified": "^9.2.1",
    "unist-util-visit": "2.0.3",
    "uuid": "^8.3.2",
    "xstate": "^4.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^0.17.4",
    "@testing-library/cypress": "^7.0.6",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/cookie-session": "^2.0.42",
    "@types/dom-mediacapture-record": "^1.0.7",
    "@types/estree": "0.0.47",
    "@types/node-fetch": "^2.5.10",
    "@types/nodemailer": "^6.4.2",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@types/uuid": "^8.3.0",
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "cypress": "^7.4.0",
    "glob": "^7.1.7",
    "kcd-scripts": "^10.0.0",
    "msw": "^0.29.0",
    "postcss-cli": "^8.3.1",
    "prisma": "^2.23.0",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.12.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "kcd-scripts pre-commit"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "build",
    "public/build",
    "*.ignored.*"
  ]
}
